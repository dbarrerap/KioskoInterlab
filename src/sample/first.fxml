<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.First"
            stylesheets="@application.css"
            prefHeight="600.0" prefWidth="600.0">
    <top>
        <HBox alignment="CENTER" spacing="20">
            <ImageView>
                <Image requestedHeight="100" url="@logo_interlab.png" preserveRatio="true" />
            </ImageView>
            <Label text="INTERLAB - Kiosco Virtual" styleClass="h1, color-interlab, font-italic" />
        </HBox>
    </top>
    <center>
        <VBox spacing="10" alignment="CENTER">
            <Button text="Consulta de Resultados" onAction="#consultaResultados" styleClass="btn, btn-info, btn-lg" />
            <Button text="Opcion 2" styleClass="btn, btn-info, btn-lg" />
            <Button text="Opcion 3" styleClass="btn, btn-info, btn-lg" />
        </VBox>
    </center>

</BorderPane>
